<%- include('./partials/header')-%>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/auth/login" method="POST">

                <h1>Editez votre compte utilisateur</h1>

                <div class="form-group">
                  <label for="exampleInputEmail1">Votre nouvelle email :</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%= users.email %>">
                  <small id="emailHelp" class="form-text text-muted">Nous avons besoin d'un email</small>
                </div>

                <div class="form-group">
                  <label for="exampleInputPassword1">Votre nouveau mot de passe</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                </div>
                
                <button type="submit" class="btn btn-primary">Enregistrer</button>
              </form>
        </div>
    </div>
</div>

<%- include('./partials/footer')-%>